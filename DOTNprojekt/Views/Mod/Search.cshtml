@model DOTNprojekt.ViewModels.SelectionVM
@{
    ViewData["Title"] = "Search";
}

<div class="container p-3">
    <div class="row pt=4">
        <div class="col-6">
            <h2 class="text-primary">Search</h2>
        </div>
    </div>
    <br />
	
	<form enctype="multipart/form-data" method="post">
    <div class="container p-3">
		<label>Choose character:</label>
		<select asp-for="selectedCharacter" class="form-select" id="select1">
			<option value="Any">Any</option>
			<option value="Dante">Dante</option>
			<option value="Nero">Nero</option>
			<option value="Vergil">Vergil</option>
			<option value="None">None</option>
		</select>
        <br />

        <label>Choose category:</label>
		<select asp-for="selectedCategory" class="form-select" id="select1">
			<option value="Any">Any</option>
			<option value="Visual">Visual</option>
			<option value="Gameplay">Gameplay</option>
			<option value="Bloody Palace">Bloody Palace</option>
			<option value="None">None</option>
		</select>
        <br />
        
        <button type="submit" class="btn btn-primary" style="width:150px">Search</button>
		<a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to Home
		</a>
	</div>
	</form>

</div>
